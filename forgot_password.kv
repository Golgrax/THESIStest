<ForgotPasswordScreen>:
    name: "forgot_password"
    canvas.before:
        Color:
            rgba: (255, 255, 255, 255)
        Rectangle:
            pos: self.pos
            size: self.size

    MDFloatLayout:
        # Background Image
        Image:
            source: "assets/forgot.png"
            allow_stretch: True
            keep_ratio: False
            size_hint: 1, 0.4
            pos_hint: {"center_x": .5, "center_y": .8}

        MDIconButton:
            icon: "arrow-left"
            pos_hint: {"center_y": .95}
            user_font_size: "30sp"
            theme_text_color: "Custom"
            text_color: (26/255, 24/255, 56/255, 255/255)
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = "login"

        # Bringing down the Welcome text and Forgot Password label
        MDLabel:
            text: "Forgot Password?"
            font_name: "BPoppins"
            font_size: "26sp"
            pos_hint: {"center_x": .6, "center_y": .60}
            color: (79/255, 54/255, 48/255, 1)

        MDLabel:
            text: "Enter your email and new password to reset"
            font_name: "MPoppins"
            font_size: "12sp"
            pos_hint: {"center_x": .6, "center_y": .55}
            color: (135/255, 80/255, 18/255, 1)

        # Email Input for Password Reset
        MDFloatLayout:
            size_hint: .8, .1
            pos_hint: {"center_x": .5, "center_y": .45}

            MDIcon:
                icon: "email"
                pos_hint: {"x": 0.02, "center_y": 0.5}
                size_hint: None, None
                size: dp(24), dp(24)
                theme_text_color: "Custom"
                text_color: (235/255, 143/255, 52/255, 1)

            TextInput:
                id: email
                hint_text: "Email"
                font_name: "MPoppins"
                size_hint_y: .7
                pos_hint: {"center_x": .5, "center_y": 0.5}
                background_color: 1, 1, 1, 0
                foreground_color: (0, 0, 0, 1)
                cursor_color: (0, 0, 0, 1)
                font_size: "14sp"
                cursor_width: "2sp"
                multiline: False
                padding_x: dp(40)
                padding_y: dp(10)
                canvas.before:
                    Color:
                        rgba: (120/255, 89/255, 66/255, 1)
                    Line:
                        width: 1
                        rounded_rectangle: self.x, self.y, self.width, self.height, 7

        MDFloatLayout:
            pos_hint: {"center_x": .45, "center_y": 0}
            size_hint_y: .03
            md_bg_color: (178/255, 178/255, 178/255, 1)

        # New Password Input with Icon
        MDFloatLayout:
            size_hint: .8, .1
            pos_hint: {"center_x": .5, "center_y": .35}

            MDIcon:
                icon: "lock"
                pos_hint: {"x": 0.02, "center_y": 0.5}
                size_hint: None, None
                size: dp(24), dp(24)
                theme_text_color: "Custom"
                text_color: (235/255, 143/255, 52/255, 1)

            TextInput:
                id: new_password
                hint_text: "New Password"
                font_name: "MPoppins"
                size_hint_y: .7
                pos_hint: {"center_x": .5, "center_y": 0.5}
                background_color: 1, 1, 1, 0
                foreground_color: (0, 0, 0, 1)
                cursor_color: (0, 0, 0, 1)
                font_size: "14sp"
                cursor_width: "2sp"
                multiline: False
                password: True
                padding_x: dp(40)
                padding_y: dp(10)
                canvas.before:
                    Color:
                        rgba: (120/255, 89/255, 66/255, 1)
                    Line:
                        width: 1
                        rounded_rectangle: self.x, self.y, self.width, self.height, 5

            MDIconButton:
                id: toggle_new_password
                icon: "eye-off"
                pos_hint: {"x": .88, "center_y": 0.5}
                size_hint: None, None
                size_hint_x: 0.1
                size: dp(24), dp(24)
                theme_text_color: "Custom"
                text_color: (235/255, 143/255, 52/255, 1)
                on_release:
                    new_password.password = not new_password.password
                    self.icon = "eye" if self.icon == "eye-off" else "eye-off"

        # Confirm Password Input with Icon
        MDFloatLayout:
            size_hint: .8, .1
            pos_hint: {"center_x": .5, "center_y": .25}

            MDIcon:
                icon: "lock"
                pos_hint: {"x": 0.02, "center_y": 0.5}
                size_hint: None, None
                size: dp(24), dp(24)
                theme_text_color: "Custom"
                text_color: (235/255, 143/255, 52/255, 1)

            TextInput:
                id: confirm_password
                hint_text: "Confirm Password"
                font_name: "MPoppins"
                size_hint_y: .7
                pos_hint: {"center_x": .5, "center_y": 0.5}
                background_color: 1, 1, 1, 0
                foreground_color: (0, 0, 0, 1)
                cursor_color: (0, 0, 0, 1)
                font_size: "14sp"
                cursor_width: "2sp"
                multiline: False
                password: True
                padding_x: dp(40)
                padding_y: dp(10)
                canvas.before:
                    Color:
                        rgba: (120/255, 89/255, 66/255, 1)
                    Line:
                        width: 1
                        rounded_rectangle: self.x, self.y, self.width, self.height, 5

            MDIconButton:
                id: toggle_confirm_password
                icon: "eye-off"
                pos_hint: {"x": .88, "center_y": 0.5}
                size_hint: None, None
                size_hint_x: 0.1
                size: dp(24), dp(24)
                theme_text_color: "Custom"
                text_color: (235/255, 143/255, 52/255, 1)
                on_release:
                    confirm_password.password = not confirm_password.password
                    self.icon = "eye" if self.icon == "eye-off" else "eye-off"

        # Submit Button to Reset Password
        Button:
            text: "Reset Password"
            size_hint: .66, .065
            pos_hint: {"center_x": .5, "center_y": .12}
            background_color: 0, 0, 0, 0
            font_name: "BPoppins"
            on_release:
                root.reset_password(email.text, new_password.text, confirm_password.text)
            canvas.before:
                Color:
                    rgba: (79/255, 54/255, 48/255, 1)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [5]

        MDLabel:
            id: label_error
            text: ""
            font_name: "BPoppins"
            font_size: "12sp"
            height: self.texture_size[1]
            pos_hint: {"center_x": .6, "center_y": .19}
            color: rgba(255, 0, 0, 255)

        MDTextButton:
            text: "Back to Login"
            pos_hint: {"center_x": .5, "center_y": .05}
            color: (79/255, 54/255, 48/255, 1)
            font_size: "12sp"
            font_name: "BPoppins"
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = "login"
