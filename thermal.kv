<ThermalCameraScreen>:
    name: "thermal_camera"
    
    # Main container
    BoxLayout:
        orientation: 'vertical'

        # Top bar outside the scrollable area
        MDTopAppBar:
            title: "Thermal Feed"
            font_name: "BPoppins"
            pos_hint: {"top": 1}
            elevation: 0
            md_bg_color: 235/255, 143/255, 52/255, 1
            size_hint_y: None
            height: dp(45)
            
            # Icon to toggle between live feed and thermal feed
            left_action_items: [["camera", lambda x: root.go_to_live_feed()]]
            right_action_items: [["thermometer", lambda x: root.go_to_thermal_feed()]]        

        # Static content area
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: self.minimum_height  # Adjust height to fit content

            # Image and temperature label below the icon button
            Image:
                id: thermal_image
                allow_stretch: True

            # Temperature Label Container with Icons
            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: None
                height: dp(50)  # Height of the enclosures
                spacing: dp(10)  # Space between the enclosures
                padding: dp(10)  # Padding for the overall container

                # First Enclosure for Environment Temperature
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint: 0.5, 1  # Occupies half the screen width
                    height: dp(45)
                    padding: dp(8)
                    spacing: dp(5)
                    canvas.before:
                        Color:
                            rgba: 0.95, 0.91, 0.88, 1  # Light beige background
                        RoundedRectangle:
                            size: self.size
                            pos: self.pos
                            radius: [dp(10)]  # Rounded edges
                        Color:
                            rgba: 0.5, 0.35, 0.3, 1  # Medium brown border
                        Line:
                            width: dp(1)  # Subtle border
                            rounded_rectangle: self.x, self.y, self.width, self.height, dp(10)

                    MDIcon:
                        icon: "tree"  # Icon for environment temp
                        size_hint_x: None
                        width: dp(30)
                        theme_text_color: "Custom"
                        text_color: 79/255, 54/255, 48/255, 1
                        pos_hint: {"y": -0.3}  
                    Label:
                        id: temperature_label
                        text: ": N/A"
                        halign: 'left'
                        valign: 'middle'
                        color: 79/255, 54/255, 48/255, 1
                        size_hint_x: None
                        width: self.texture_size[0] + dp(10)

                # Second Enclosure for Dog Body Temperature
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint: 0.5, 1  # Occupies half the screen width
                    height: dp(45)
                    padding: dp(8)
                    spacing: dp(5)
                    canvas.before:
                        Color:
                            rgba: 0.95, 0.91, 0.88, 1  # Light beige background
                        RoundedRectangle:
                            size: self.size
                            pos: self.pos
                            radius: [dp(10)]  # Rounded edges
                        Color:
                            rgba: 0.5, 0.35, 0.3, 1  # Medium brown border
                        Line:
                            width: dp(1)  # Subtle border
                            rounded_rectangle: self.x, self.y, self.width, self.height, dp(10)

                    MDIcon:
                        icon: "dog"  # Icon for dog body temp
                        size_hint_x: None
                        width: dp(30)
                        theme_text_color: "Custom"
                        text_color: 79/255, 54/255, 48/255, 1
                        pos_hint: {"y": -0.3}  
                    Label:
                        id: dog_temperature_label
                        text: ": N/A"
                        halign: 'left'
                        valign: 'middle'
                        color: 79/255, 54/255, 48/255, 1
                        size_hint_x: None
                        width: self.texture_size[0] + dp(10)

# Bottom navigation stays outside of the scrollable area
        MDBottomNavigation:
            panel_color: 250/255, 177/255, 47/255, 1
            selected_color_background: 1, 1, 1, 0
            text_color_active: 79/255, 54/255, 48/255, 1
            text_color_normal: 217/255, 90/255, 26/255, 1
            size_hint_y: 0.2

            MDBottomNavigationItem:
                name: "home"
                icon: "home"
                text: "Home"
                md_bg_color: 250/255, 250/255, 250/255, 1
                on_tab_press: root.home()

            MDBottomNavigationItem:
                name: "activitylogs"
                icon: "file-document"
                text: "Activity Logs"
                md_bg_color: 250/255, 250/255, 250/255, 1
                on_tab_press: root.activity_logs()

            MDBottomNavigationItem:
                name: "camera"
                icon: "camera"
                text: "Camera"
                md_bg_color: 250/255, 250/255, 250/255, 1
                on_tab_press: root.go_to_live_feed()

            MDBottomNavigationItem:
                name: "pet"
                icon: "dog"
                text: "Pet"
                md_bg_color: 250/255, 250/255, 250/255, 1
                on_tab_press: root.pet_tab()

            MDBottomNavigationItem:
                name: "profile"
                icon: "account"
                text: "Profile"
                md_bg_color: 250/255, 250/255, 250/255, 1
                on_tab_press: root.profile_tab()